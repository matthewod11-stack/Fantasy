# Copy this to .env and fill secrets as needed. Keep DRY_RUN=true when experimenting.
# Lines starting with # are comments and ignored by dotenv loaders.

# Core API keys
OPENAI_API_KEY=
HEYGEN_API_KEY=

# TikTok OAuth config (only needed for real uploads)
TIKTOK_CLIENT_KEY=
TIKTOK_CLIENT_SECRET=
TIKTOK_REDIRECT_URI=

# Runtime toggles
# Set DRY_RUN=true to avoid real network calls and to produce local artifacts
DRY_RUN=true
HEYGEN_LIVE=false
TIKTOK_LIVE=false
OPENAI_ENABLED=false
# External API Configuration (populate locally; never commit real secrets)
OPENAI_API_KEY="set-me-locally"
TIKTOK_CLIENT_KEY="set-me-locally"
TIKTOK_CLIENT_SECRET="set-me-locally"
TIKTOK_REDIRECT_URI="https://example.com/oauth/callback"
HEYGEN_API_KEY="set-me-locally"
PUBLIC_BASE_URL="https://matthewod11-stack.github.io/GOJ/"
GOOGLE_SHEETS_CREDENTIALS_PATH="path/to/credentials.json"

# Local development
# Set DRY_RUN=true to simulate external calls offline
DRY_RUN="true"

# Live-mode toggles (defaults = false). These flags make adapters "noisy"
# and enforce presence of required credentials. Set to 'true' only in ops
# environments where you have populated secrets.
# Enable the Sleeper background scheduler
SLEEPER_ENABLED="false"
# Enable OpenAI calls
OPENAI_ENABLED="false"
# Set HEYGEN_LIVE=true to allow HeyGen network calls and stricter checks
HEYGEN_LIVE="false"
# Set TIKTOK_LIVE=true to allow TikTok network calls and strict credential checks
TIKTOK_LIVE="false"